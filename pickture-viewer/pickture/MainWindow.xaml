<Window x:Class="pickture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="5">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Image Name="image_preview"></Image>

                <Viewbox Name="view_box">
                    <Canvas Name="picker_canvas">
                        <Rectangle Canvas.Left="15" Canvas.Top="15" Width="60" Height="50" Fill="Yellow"/>
                    </Canvas>
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</Window>
